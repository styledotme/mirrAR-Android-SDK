<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view2"
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:background="@color/colorAccent"
            android:visibility="visible" />

        <ToggleButton
            android:id="@+id/select"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/like_View"
            android:layout_alignBottom="@+id/like_View"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/share_selector"
            android:textOff=""
            android:textOn=""
            android:visibility="invisible" />


        <ToggleButton
            android:id="@+id/like_View"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/likeselector"
            android:textOff=""
            android:textOn=""
            android:visibility="invisible" />


        <LinearLayout
            android:id="@+id/item"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_below="@+id/like_View">

            <ImageView
                android:id="@+id/jewel_View"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:paddingEnd="2dp"
                android:src="@drawable/save" />

            <ImageView
                android:id="@+id/jewel_View_00"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="3"
                android:visibility="gone"
                android:src="@drawable/ear" />

            <ImageView
                android:paddingStart="2dp"
                android:id="@+id/jewel_View2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleX="-1"
                tools:src="@drawable/save" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_centerHorizontal="true">


            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_access_time" />

            <TextView
                android:id="@+id/time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text=""
                android:layout_gravity="center"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/price_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_centerHorizontal="true"
            tools:text="Rs 142,156"
            android:visibility="visible"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#649e9e9e"
            android:visibility="gone" />

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            tools:text="jck-lasvegas"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/inquire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bottom_nav_selector"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Know more"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_below="@+id/price_View"
            android:visibility="visible" />

        <TextView
            android:id="@+id/inquireNotSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brand_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/inquire_notselected"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="Know more"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
