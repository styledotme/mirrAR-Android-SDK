    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shareLayout"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:translationY="50dp"
        android:layout_centerVertical="true"
        android:id="@+id/wishlistLayout">
    <ToggleButton
        android:id="@+id/wishlist"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/previewlikeselector"
        android:visibility="gone"
        android:textOff=""
        android:layout_gravity="center_horizontal"
        android:textOn="" />
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Wishlist"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf ="@id/wishlistLayout"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:translationY="58dp"
        android:id="@+id/saveLayout">
    <ImageView
        android:id="@+id/save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:layout_toRightOf="@id/wishlistLayout"
        android:src="@drawable/ic_file_download"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:text="Save"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/getInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="Get Info"
        android:textColor="@color/colorAccent"
        android:elevation="2dp"
        android:paddingTop="12dp"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        android:layout_centerVertical="true"
        android:paddingLeft="32dp"
        android:translationY="50dp"
        android:paddingRight="32dp"
        android:textSize="16sp"
        android:background="@drawable/previewgetinfobutton"
        android:visibility="visible"
        android:layout_alignParentRight="true"/>
