<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="180dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view2"
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:background="@color/colorAccent"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/jewel_View"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ear"
            android:translationX="0dp"
            android:translationY="-70dp" />

        <ImageView
            android:id="@+id/necklace"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:src="@drawable/ear" />

        <ImageView
            android:id="@+id/jewel_View2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ear"
            android:translationX="0dp"
            android:translationY="-70dp" />

        <TextView
            android:id="@+id/price_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/necklace"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            android:text="Rs 142,156"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/necklace"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:visibility="invisible">


            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_access_time" />

            <TextView
                android:id="@+id/time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:text=""
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:text="jck-lasvegas"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#649e9e9e"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:visibility="visible">

            <ToggleButton
                android:id="@+id/like_View"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/likeselector"
                android:textOff=""
                android:textOn=""
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            android:id="@+id/inquire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brand_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bottom_nav_selector"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="Buy Now"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/inquireNotSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brand_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/inquire_notselected"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="Buy Now"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
